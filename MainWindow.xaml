<!-- MainWindow.xaml -->
<Window x:Class="FxVolatilityImport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FX Volatility Import - MX3" 
        Height="700" Width="1200"
        Background="#0F172A"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Färgpalett (mörkt tema) -->
        <SolidColorBrush x:Key="Brush.Panel" Color="#1E293B"/>
        <SolidColorBrush x:Key="Brush.Border" Color="#334155"/>
        <SolidColorBrush x:Key="Brush.Text" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="Brush.TextMuted" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Brush.Accent" Color="#38BDF8"/>
        <SolidColorBrush x:Key="Brush.Success" Color="#4ADE80"/>

        <!-- DataGrid stil -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#10FFFFFF"/>
        </Style>

        <!-- Button stil -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
            <TextBlock Text="FX Volatility Import" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="{StaticResource Brush.Text}"/>
            <TextBlock Text="Bloomberg → MX3 Market Data" 
                       FontSize="12" 
                       Foreground="{StaticResource Brush.TextMuted}"/>
        </StackPanel>

        <!-- Vänster: Currency Pairs -->
        <Border Grid.Row="1" Grid.RowSpan="3" 
                Background="{StaticResource Brush.Panel}" 
                CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Currency Pairs" 
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.Text}"/>
                    <Button Content="↻ Refresh" 
                            Command="{Binding RefreshPairsCommand}"
                            Margin="12,0,0,0"
                            Style="{StaticResource AccentButton}"
                            Padding="8,4" FontSize="11"/>
                </StackPanel>

                <TextBlock Grid.Row="1" 
                           Text="Configure ATM and Smile sources per pair"
                           FontSize="11" 
                           Foreground="{StaticResource Brush.TextMuted}"
                           Margin="0,0,0,12"/>

                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding CurrencyPairs}"
                          Style="{StaticResource DarkDataGrid}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="LIVE" 
                                                Binding="{Binding IsLive}" Width="50"/>
                        <DataGridTextColumn Header="PAIR" 
                                            Binding="{Binding CurrencyPair}" 
                                            IsReadOnly="True" Width="80"/>
                        <DataGridComboBoxColumn Header="ATM_SRC" Width="80">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="sys:String" 
                                         xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:String>BGN</sys:String>
                                    <sys:String>BLCS</sys:String>
                                    <sys:String>BVAL</sys:String>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                            <DataGridComboBoxColumn.SelectedItemBinding>
                                <Binding Path="AtmSource"/>
                            </DataGridComboBoxColumn.SelectedItemBinding>
                        </DataGridComboBoxColumn>
                        <DataGridComboBoxColumn Header="SMILE_SRC" Width="80">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="sys:String" 
                                         xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:String>BGN</sys:String>
                                    <sys:String>BLCS</sys:String>
                                    <sys:String>BVAL</sys:String>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                            <DataGridComboBoxColumn.SelectedItemBinding>
                                <Binding Path="SmileSource"/>
                            </DataGridComboBoxColumn.SelectedItemBinding>
                        </DataGridComboBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Höger: Volatility Data -->
        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="3"
                Background="{StaticResource Brush.Panel}" 
                CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Volatility Surface Data" 
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource Brush.Text}"
                           Margin="0,0,0,12"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding VolatilityData}"
                          Style="{StaticResource DarkDataGrid}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PAIR" Binding="{Binding CurrencyPair}" Width="70"/>
                        <DataGridTextColumn Header="TENOR" Binding="{Binding Tenor}" Width="55"/>
                        <DataGridTextColumn Header="ATM_BID" Binding="{Binding AtmBid, StringFormat=N3}" Width="70"/>
                        <DataGridTextColumn Header="ATM_ASK" Binding="{Binding AtmAsk, StringFormat=N3}" Width="70"/>
                        <DataGridTextColumn Header="RR_25D" Binding="{Binding RR25D, StringFormat=N3}" Width="70"/>
                        <DataGridTextColumn Header="RR_10D" Binding="{Binding RR10D, StringFormat=N3}" Width="70"/>
                        <DataGridTextColumn Header="BF_25D" Binding="{Binding BF25D, StringFormat=N3}" Width="70"/>
                        <DataGridTextColumn Header="BF_10D" Binding="{Binding BF10D, StringFormat=N3}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer: Actions -->
        <Border Grid.Row="4" Grid.ColumnSpan="3" 
                Background="{StaticResource Brush.Panel}" 
                CornerRadius="8" Padding="16" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Action buttons -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Load Data" 
                            Command="{Binding LoadDataCommand}"
                            Style="{StaticResource AccentButton}"/>
                    <Button Content="Import ATM" 
                            Command="{Binding ImportAtmCommand}"
                            Style="{StaticResource AccentButton}"
                            Margin="12,0,0,0"/>
                    <Button Content="Import Smile" 
                            Command="{Binding ImportSmileCommand}"
                            Style="{StaticResource AccentButton}"
                            Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Auto import toggle -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <CheckBox IsChecked="{Binding AutoImportEnabled}" 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Auto-import at :15 (08-16)" 
                               Foreground="{StaticResource Brush.TextMuted}"
                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusText}" 
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontSize="11"/>
                    <TextBlock Text="{Binding LastImportTime}" 
                               Foreground="{StaticResource Brush.Success}"
                               FontSize="11" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
